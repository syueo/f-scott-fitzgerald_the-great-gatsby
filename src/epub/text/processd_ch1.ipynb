    "# Convert text from a HTML file into a string.\n",
    "def html2txt(fpath):\n",
    "    with open(fpath) as f:\n",
    "        html = bs.BeautifulSoup(f, 'html.parser')\n",
    "    return html.get_text()"
   ]
